#
# Window Manipulation
#

# kill window
super + w
    killw $(pfw); \
    focus.sh prev

# move windows around
super + {h, j, k, l}
    wmv {-20 0, 0 20, 0 -20, 20 0} $(pfw)

# resize windows
super + alt + {h, j, k, l}
    wrs {-20 0, 0 20, 0 -20, 20 0} $(pfw)

# cycling through focus
super + {_,shift +}Tab
    focus.sh {next, prev}

# fullsceen a focused window
super + f
    fullscreen.sh $(pfw)

# tile windows with one large on the left
super + t
    tile.sh

# snap windows to edges
super + shift {h,j,k,l}
    snap.sh -{h,j,k,l}

#
# Mouse Support
#

# focus on clicked window
~button1
    focus.sh $(get_window.sh)

super + !button{1,3}
    {wmv, wrs} -a %i %i $(pfw)

#
# Group Management
#

# add window to group
super + shift + {1-9, 0}
    groups.sh -c $(pfw); \
    groups.sh -s $(pfw) {1-9, 0}

# toggle group visibility
super + {1-9, 0}
    groups.sh -t {1-9, 0}

# remove window from all groups and make it visible
super + BackSpace
    groups.sh -c $(pfw)

# 
# Applications
#

super + Return
    urxvt

super + space
    rofi -show run

# Reload sxhkd config
super + Escape
    pkill -USR1 -x sxhkd

# Quit 
super + alt + Escape
    pkill xinit 
